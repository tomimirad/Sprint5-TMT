<body>
    <!-- Bootstrap JavaScript code -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- End code -->
        <%- include('./partials/header')%>

        <div id="carouselExampleControls" class="carousel slide propaganda" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/1.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/3.png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    <div class="home">
        <div class="categorias">
            <div class="encabezado">
                <p class="titulo">Conoce todo lo que te podemos ofrecer</p>
            </div>
            <div class="categorias-master">
                <div class="muebles categoriaImg">
                    <a href="#muebles"><img src="/images/Muebles.png" alt="Muebles"></a>
                </div>
                <div class="electros categoriaImg">
                    <a href="#electro"><img src="/images/Electrodomésticos.png" alt="Electro"></a>
                </div>
            </div>
            <div class="subcategorias">
                    <div class="sub-muebles subC subC-img" id="muebles">
                        <a href="#"><img src="/images/Mesas.png" alt="Mesas"></a>
                        <a href="#"><img src="/images/Camas.png" alt="Camas"></a>
                        <a href="#"><img src="/images/Escritorios.png" alt="Escritorios"></a>
                        <a href="#"><img src="/images/Sillones.png" alt="Sillones"></a>
                    </div>
                    <div class="sub-electros subC subC-img" id="electro">
                        <a href="#"><img src="/images/Microondas.png" alt="Microondas"></a>
                        <a href="#"><img src="/images/Televisores.png" alt="Televisores"></a>
                        <a href="#"><img src="/images/Lavarropas.png" alt="Lavarropas"></a>
                        <a href="#"><img src="/images/Cafeteras.png" alt="Cafeteras"></a>
                    </div>
            </div>
        </div>

        <!-- Slider productos recomendados -->

        <%- include('./partials/productRecom', {inSale})%>


        <div class="sponsors">
            <img src="/images/Diseño sin título.png" alt="sponsors">
        </div>
    </div>
    
    <%- include('./partials/footer')%>

</body>
