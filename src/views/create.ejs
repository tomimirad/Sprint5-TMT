    <script>
      let nombre = document.querySelector('#nombreDeProducto')
      let form = document.querySelector('.derecha-create')
      let errores = [];
      form.addEventListener('submit',function(event){
        errores = []
        if (nombre.value == '') {
          errores.push('El campo Nombre no puede estar vac√≠o.')
        }

        let descripcion = document.querySelector('#descripcion')
        if (descripcion.value == '') {
          errores.push('El campo Descripcion no puede estar vac√≠o.')
        }

        let precio = document.querySelector('#precio')
        if (precio.value == '') {
          errores.push('El campo Precio no puede estar vac√≠o.')
        }

        let descuento = document.querySelector('#descuento')
        if (descuento.value == '') {
          errores.push('El campo Descuento no puede estar vac√≠o.')
        }
        let cuota = document.querySelector('#cuota')
        if (cuota.value == '') {
          errores.push('El campo Cuota no puede estar vac√≠o.')
        }
        let subCategoria = document.querySelector('#subcategoria')
        if (subCategoria.value == '') {
          errores.push('El campo Subcategoria no puede estar vac√≠o.')
        }
        let textoHTML = "<ul>";
          for ( i = 0; i < errores.length; i++) {
            textoHTML += "<li>" + errores[i] + "</li>";
          }
          textoHTML += "</ul>";
          
          if(errores.length > 0){
            event.preventDefault()
            Swal.fire({
              title: 'Error! üò°',
              html: textoHTML,
              icon: 'error',
              confirmButtonText: 'Ok'
            })
          }
      })
    </script>

    <%- include('./partials/footer')%>
</body>

</html>